
@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
    string productId = ViewBag.productId;
}

   <!-- Breadcrumb Start -->
@await Component.InvokeAsync("_DirectoryAlertUILayoutComponentPartial")

    <!-- Breadcrumb End -->


    <!-- Shop Detail Start -->
    <div class="container-fluid pb-5">
        <div class="row px-xl-5">

         @await Component.InvokeAsync("_ProductDetailImageSliderComponentPartial", new { id = productId }) 
        @await Component.InvokeAsync("_ProductDetailFeatureComponentPartial",new {id=productId})

           

        </div>
        <div class="row px-xl-5">
            <div class="col">
                <div class="bg-light p-30">
                    <div class="nav nav-tabs mb-4">
                        <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Description</a>
                        <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-2">Information</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Reviews (  @TempData["commentCount"] )</a>
                    </div>
                    <div class="tab-content">
                    @await Component.InvokeAsync("_ProductDetailDescriptionComponentPartial", new { id = productId })
                    @await Component.InvokeAsync("_ProductDetailInformationComponentPartial", new { id = productId })
                    @await Component.InvokeAsync("_ProductDetailReviewComponentPartial", new { id = productId })

                    
                      
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Shop Detail End -->

