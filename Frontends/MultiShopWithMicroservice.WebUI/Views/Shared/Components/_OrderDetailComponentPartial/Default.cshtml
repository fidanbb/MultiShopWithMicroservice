@model CreateOrderAddressDto


<div class="col-lg-8">
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Your Order Delivery and Billing Address</span></h5>
    <div class="bg-light p-30 mb-5">
        <form method="post">
            <div class="row">
                <div class="col-md-6 form-group">
                    <label>Name</label>
                    <input class="form-control" type="text" placeholder="Name" asp-for="Name" id="firstName" required>
                </div>
                <div class="col-md-6 form-group">
                    <label>Surname</label>
                    <input class="form-control" type="text" placeholder="Surname" asp-for="Surname" id="lastName" required>
                </div>
                <div class="col-md-6 form-group">
                    <label>E-mail</label>
                    <input class="form-control" type="text" placeholder="example@email.com" asp-for="Email" id="email">
                </div>
                <div class="col-md-6 form-group">
                    <label>Phone Number</label>
                    <input class="form-control" type="text" placeholder="+994 00 000 00 00" asp-for="Phone" id="mobileNo">
                </div>
                <div class="col-md-6 form-group">
                    <label>Neighbourhood</label>
                    <input class="form-control" type="text" placeholder="123 Neighbourhood" asp-for="Detail1" id="addressLine1">
                </div>
                <div class="col-md-6 form-group">
                    <label>Street</label>
                    <input class="form-control" type="text" placeholder="123 Street" asp-for="Detail2" id="addressLine2">
                </div>
                <div class="col-md-6 form-group">
                    <label>Country</label>
                    <select class="custom-select" asp-for="Country" id="country">
                        <option selected>Azerbaijan</option>
                    </select>
                </div>
                <div class="col-md-6 form-group">
                    <label>City</label>
                    <input class="form-control" type="text" placeholder="Baku" asp-for="City" id="city">
                </div>
                <div class="col-md-6 form-group">
                    <label>District</label>
                    <input class="form-control" type="text" placeholder="Khatai" asp-for="District" id="district">
                </div>
                <div class="col-md-6 form-group">
                    <label>Postal Code</label>
                    <input class="form-control" type="text" placeholder="123" id="zipCode" asp-for="ZipCode">
                </div>
                <div class="col-md-12 form-group">
                    <label>Description</label>
                    <textarea class="form-control" type="text" placeholder="You can enter your note about the order, if you have any..." id="description" rows="5" asp-for="Description"></textarea>
                </div>
            </div>
        </form>

    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>

    $(document).ready(function () {
        $('#submitBtn').click(function (e) {
            e.preventDefault();

            var formData = {
                Name: $('#firstName').val(),
                Surname: $('#lastName').val(),
                Email: $('#email').val(),
                Phone: $('#mobileNo').val(),
                Detail1: $('#addressLine1').val(),
                Detail2: $('#addressLine2').val(),
                Country: $('#country').val(),
                City: $('#city').val(),
                District: $('#district').val(),
                ZipCode: $('#zipCode').val(),
                Description: $('#description').val(),
            };

            $.ajax({
                type: 'POST',
                url: '/Order/CreateOrderAddress',
                data: JSON.stringify(formData),
                contentType: 'application/json',
                success: function (response) {
                    console.log("Adddress successfully added!");
                    window.location.href = "/Payment/Index";
                },
                error: function (xhr, status, error) {
                    alert(xhr.responseText);
                }
            });
        });
    });
</script>
