@model List<ResultProductImageDto>
@{
    ViewData["Title"] = "GetImagesByProductId";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="chart-box">

            <div id="example_filter" class="dataTables_filter pull-right">
                <input class="form-control" id="placeholderInput" placeholder="Ara" type="text">
            </div>
            <table class="table table-responsive">
                @{
                    int count = 0;
                }
                <thead>
                    <tr>
                        <th class="sortable">#</th>
                        <th class="sortable">Image</th>
                        <th class="sortable">Opeartions</th>

                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    count++;

                    <tr>
                        <td class="text-truncate">@count</td>
                        <td class="text-truncate"><img src="@item.ImageUrl" style="width:75px;height:75px;border-radius:50%" /></td>


                        <td class="text-truncate">
                            <button type="button" class="btn btn-outline btn-rounded btn-danger" data-toggle="modal" data-target="#modalDeleteProductImage-@item.ProductImageID">
                                <i class="fa fa-eraser"></i>
                            </button>

                            <a class="btn btn-outline btn-rounded btn-info" asp-action="UpdateProductImage" asp-route-id="@item.ProductImageID"><i class="fa fa-edit"></i> </a>
                        </td>
                    </tr>
                    <div class="modal" tabindex="-1" role="dialog" id="modalDeleteProductImage-@item.ProductImageID">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title"><b>Attention !!</b> Product Image Will be Deleted</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>@item.ProductImageID</p>
                                </div>
                                <div class="modal-footer">
                                    <a class="btn btn-danger" asp-route-id="@item.ProductImageID" asp-controller="ProductImage" asp-action="DeleteProductImage" asp-area="Admin" data-id="@item.ProductId">Delete</a>
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </table>
            <a class="btn btn-outline btn-rounded btn-primary" asp-action="CreateProductImage" asp-controller="ProductImage" asp-area="Admin">Add New Image</a>
        </div>
    </div>
</div>

