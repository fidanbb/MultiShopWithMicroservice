@model CreateFeatureSliderDto
@{
    ViewData["Title"] = "CreateFeatureSlider";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Feature Slider Add Page</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <label>Title </label>
                        <input type="text" class="form-control" asp-for="Title" />
                        <br />
                        <label>Description</label>
                        <input type="text" class="form-control" asp-for="Description" />
                        <br />
                        <label>Image</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" />
                        <br />
                        <button class="btn btn-primary">Add Feature Slider</button>
                        <a href="/Admin/FeatureSlider/Index/" class="btn btn-danger">Back</a>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
