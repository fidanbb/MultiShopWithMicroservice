@model ResultProductDetailDto 

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    string productId = ViewBag.productId;
}

<section class="content container-fluid">
<div class="row">
    <div class="col-md-12">
        <div class="chart-box">
            <br />
            <br />
            <table class="table table-responsive">
                <thead>
                    <tr>
                        <th class="sortable">Product Description</th>
                        <th class="sortable">Product Info</th>
                        <th>Operations</th>
                    </tr>
                </thead>
              @if(Model is not null)
                        {
                    <tr>
                        
                            <td class="text-truncate">@Model.ProductDescription</td>
                            <td class="text-truncate">@Model.ProductInfo</td>


                            <td class="text-truncate">

                                <button type="button" class="btn btn-outline btn-rounded btn-danger" data-toggle="modal" data-target="#modalDeleteProductDetail-@Model.ProductDetailId">
                                    <i class="fa fa-eraser"></i>
                                </button>

                                <a asp-route-id="@Model.ProductDetailId" asp-controller="ProductDetail" asp-action="UpdateProductDetail" asp-area="Admin" data-id="@Model.ProductDetailId" class="btn btn-outline btn-rounded btn-sm btn-info"><i class="fa fa-edit"></i></a>

                            </td>
                       
                        
                    </tr>
                    <div class="modal" tabindex="-1" role="dialog" id="modalDeleteProductDetail-@Model.ProductDetailId">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title"><b>Attention !!</b> Product Detail Will be Deleted</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>@Model.ProductDescription</p>
                                </div>
                                <div class="modal-footer">
                                <a class="btn btn-danger" asp-route-id="@Model.ProductDetailId" asp-controller="ProductDetail" asp-action="DeleteProductDetail" asp-area="Admin" data-id="@Model.ProductDetailId">Delete</a>
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    }
            </table>

                @if (Model is not null)
                {

                    <a href="" class="btn btn-danger btn-outline btn-rounded btn-sm d" disabled>You can't add product detail more than 1!</a>


                }

                else

                {
                    <a class="btn btn-outline btn-rounded btn-sm btn-primary"  asp-controller="ProductDetail" asp-action="CreateProductDetail" asp-area="Admin">Add New Product Detail</a>

                }

        </div>
    </div>
</div>
</section>



