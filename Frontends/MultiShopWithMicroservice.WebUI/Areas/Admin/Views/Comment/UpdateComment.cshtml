@model UpdateCommentDto
@{
    ViewData["Title"] = "UpdateComment";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<section class="content container-fluid">
<div class="row">
    <div class="col-md-12">
        <div class="chart-box">

            <form method="post">
                <input type="hidden" asp-for="UserCommentId" />
                <input type="hidden" asp-for="ProductId" />
                <label>Name Surname</label>
                <input type="text" asp-for="NameSurname" class="form-control" />
                <br />
                <label>Email</label>
                <input type="email" asp-for="Email" class="form-control" />
                <br />
                <label>Image Url</label>
                <input type="text" asp-for="ImageUrl" class="form-control" />
                <br />
                <label>Product Rate</label>
                <input type="number" asp-for="Rating" class="form-control" />
                <br />
                    <label>Comment Date</label>
                    <input type="date" class="form-control" asp-for="CreatedDate" />
                    <br />
                <label>Product Comment</label>
                <textarea type="text" asp-for="Comment" class="form-control" rows="4"></textarea>
                <br>

                <button class="btn btn-outline btn-rounded btn-primary"><i class="fa fa-edit"></i> Update</button>
            </form>
        </div>
    </div>
</div>
</section>
