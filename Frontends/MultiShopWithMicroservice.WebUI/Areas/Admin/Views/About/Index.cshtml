@model List<ResultAboutDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th>Address</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Delete</th>
                                <th>Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Description</td>
                                    <td>@item.Address</td>
                                    <td>@item.Email</td>
                                    <td>@item.Phone</td>
                                    <td><a href="/Admin/About/DeleteAbout/@item.AboutId" class="btn btn-danger">Delete</a></td>
                                    <td><a href="/Admin/About/UpdateAbout/@item.AboutId" class="btn btn-success">Update</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (Model.Count >= 1)
                    {

                        <a href="" class="btn btn-danger btn-sm d" disabled>You can't add about more than 1!</a>


                    }

                    else

                    {
                        <a href="/Admin/About/CreateAbout/" class="btn btn-primary">New About Entry</a>


                    }
                </div>
            </div>
        </div>
    </div>
</section>
