@model List<ResultSendboxMessageDto>
@{
    ViewData["Title"] = "Sendbox";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Gelen Mesaj Kutusu</h4>

                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Receiver</th>
                                <th>Subject</th>
                                <th>Date</th>
                                <th>State</th>
                                <th>Delete</th>
                                <th>Open Message</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.RecieverId</td>
                                    <td>@item.Subject</td>
                                    <td>@item.MessageDate.ToString("dd-MMMM-yyyy-dddd")</td>
                                    <td>@(item.IsRead ? "Read" : "UnRead")</td>
                                    <td><a href="#" class="btn btn-warning btn-sm">Delete</a></td>
                                    <td><a href="#" class="btn btn-warning btn-sm">Open Message</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>


