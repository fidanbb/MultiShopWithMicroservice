@model List<ResultOrderingByUserIdDto>


@{
    ViewData["Title"] = "MyOrderList";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Order List</h4>
                <div class="table-responsive pt-3">
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Order No</th>
        <th>Total Amount</th>
        <th>Order Date</th>
        <th>Details</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.OrderingId</td>
            <td>$@item.TotalPrice</td>
            <td>@item.OrderDate.ToLongDateString()</td>
            <td>
                <a href="/User/MyOrder/OrderDetails/@item.OrderingId/" class="btn btn-outline-primary">Order Detail</a>
            </td>
        </tr>
    }
</table>
                </div>
            </div>
        </div>
    </div>
</div>